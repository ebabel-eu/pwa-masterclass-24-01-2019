root = true

[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[{.eslintrc.js,webpack.config.js,webpack.parts.js,.babelrc}]
indent_style = space
indent_size = 2
